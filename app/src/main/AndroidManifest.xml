<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.android.quotes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.Innovvapp.anytimequotes.App.AppController"
        android:allowBackup="true"
        android:icon="@drawable/quotes_two_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_final_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.Innovvapp.anytimequotes.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Innovvapp.anytimequotes.Activities.FullscreenPhotoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.Innovvapp.anytimequotes.Activities.AboutActivity"
            android:label="@string/about_label"
            android:parentActivityName="com.Innovvapp.anytimequotes.Activities.MainActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>






    </application>


</manifest>